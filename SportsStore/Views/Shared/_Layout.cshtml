<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SportsStore</title>
    <link rel="stylesheet"
          asp-href-include="/lib/bootstrap/dist/**/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*" />
    <script src="https://kit.fontawesome.com/9bdd2c5146.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="navbar navbar-dark bg-dark" role="navigation">
        <a class="col navbar-brand" href="#">SPORTS STORE</a>
        @await Component.InvokeAsync("CartSummary")
    </div>
    <div class="row m-1 p-1">
        <div id="categories" class="col-3">
            @await Component.InvokeAsync("NavigationMenu")
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>
</body>
</html>